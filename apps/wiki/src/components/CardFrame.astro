---
/**
 * CardFrame Component
 *
 * Displays a card with placeholder artwork in a styled frame.
 * Uses CSS-based visual design instead of real card images.
 */

interface Props {
  name: string;
  cardNumber: string;
  rarity: string;
  cardType: string;
  attribute?: string;
  archetype?: string;
  monsterStats?: {
    attack: number;
    defense: number;
    level: number;
    attribute?: string;
    monsterType?: string;
  };
  effects?: Array<{
    name: string;
    description: string;
  }>;
  href?: string;
  compact?: boolean;
}

const {
  name,
  cardNumber,
  rarity,
  cardType,
  attribute,
  archetype: _archetype, // Reserved for future use
  monsterStats,
  effects = [],
  href,
  compact = false,
} = Astro.props;

// Determine card color based on attribute/type
const getCardColor = () => {
  if (attribute) {
    const colors: Record<string, string> = {
      fire: '#ef4444',
      water: '#3b82f6',
      earth: '#84cc16',
      wind: '#06b6d4',
      light: '#fbbf24',
      dark: '#8b5cf6',
      divine: '#f472b6',
    };
    return colors[attribute.toLowerCase()] ?? '#9ca3af';
  }
  if (cardType === 'spell') return '#22c55e';
  if (cardType === 'trap') return '#ec4899';
  return '#9ca3af';
};

const cardColor = getCardColor();

const rarityColors: Record<string, string> = {
  common: '#9ca3af',
  uncommon: '#22c55e',
  rare: '#3b82f6',
  epic: '#a855f7',
  legendary: '#f59e0b',
};

const rarityColor = rarityColors[rarity] ?? '#9ca3af';

const CardWrapper = href ? 'a' : 'div';
---

<CardWrapper
  class:list={[
    'card-frame',
    `rarity-${rarity}`,
    { compact, clickable: !!href }
  ]}
  href={href}
>
  {/* Card Header */}
  <div class="card-header">
    <span class="card-name">{name}</span>
    {monsterStats && (
      <span class="card-level">‚òÖ{monsterStats.level}</span>
    )}
  </div>

  {/* Card Art Placeholder */}
  <div class="card-art" style={`--card-color: ${cardColor}`}>
    <div class="art-placeholder">
      <span class="type-icon">
        {cardType === 'monster' && '‚öîÔ∏è'}
        {cardType === 'spell' && '‚ú®'}
        {cardType === 'trap' && '‚ö°'}
        {cardType === 'equipment' && 'üõ°Ô∏è'}
        {cardType === 'field' && 'üåç'}
      </span>
      {attribute && (
        <span class="attribute-icon">{attribute.toUpperCase()}</span>
      )}
    </div>
  </div>

  {/* Card Info */}
  {!compact && (
    <div class="card-info">
      <div class="card-type-line">
        <span class="card-type">{cardType}</span>
        {monsterStats?.monsterType && (
          <span class="monster-type">/ {monsterStats.monsterType}</span>
        )}
      </div>

      {/* Monster Stats */}
      {monsterStats && (
        <div class="stats-row">
          <span class="stat atk">ATK/{monsterStats.attack}</span>
          <span class="stat def">DEF/{monsterStats.defense}</span>
        </div>
      )}

      {/* Effect Text Preview */}
      {effects.length > 0 && (
        <div class="effect-preview">
          {effects[0].description.slice(0, 80)}
          {effects[0].description.length > 80 && '...'}
        </div>
      )}
    </div>
  )}

  {/* Card Footer */}
  <div class="card-footer">
    <span class="card-number">{cardNumber}</span>
    <span class="card-rarity" style={`--rarity-color: ${rarityColor}`}>
      {rarity.toUpperCase()}
    </span>
  </div>
</CardWrapper>

<style>
  .card-frame {
    display: flex;
    flex-direction: column;
    border: 3px solid var(--sl-color-gray-5);
    border-radius: 12px;
    padding: 0.75rem;
    background: linear-gradient(
      135deg,
      var(--sl-color-gray-6) 0%,
      var(--sl-color-gray-7) 100%
    );
    transition: transform 0.2s, box-shadow 0.2s;
    text-decoration: none;
    color: inherit;
    min-width: 180px;
  }

  .card-frame.clickable:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.2);
  }

  .card-frame.compact {
    min-width: 140px;
    padding: 0.5rem;
  }

  /* Rarity borders */
  .rarity-common { border-color: #9ca3af; }
  .rarity-uncommon { border-color: #22c55e; }
  .rarity-rare { border-color: #3b82f6; }
  .rarity-epic { border-color: #a855f7; }
  .rarity-legendary {
    border-color: #f59e0b;
    box-shadow: 0 0 12px rgba(245, 158, 11, 0.5);
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .card-name {
    font-weight: 700;
    font-size: 0.875rem;
    line-height: 1.2;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .card-level {
    font-size: 0.75rem;
    color: #fbbf24;
    font-weight: 600;
  }

  .card-art {
    aspect-ratio: 4 / 3;
    border-radius: 8px;
    background: linear-gradient(
      135deg,
      var(--card-color) 0%,
      color-mix(in srgb, var(--card-color) 50%, black) 100%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.5rem;
    overflow: hidden;
  }

  .compact .card-art {
    aspect-ratio: 1;
  }

  .art-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.25rem;
    opacity: 0.8;
  }

  .type-icon {
    font-size: 2rem;
  }

  .compact .type-icon {
    font-size: 1.5rem;
  }

  .attribute-icon {
    font-size: 0.625rem;
    font-weight: 700;
    color: white;
    text-shadow: 0 1px 2px rgba(0,0,0,0.5);
  }

  .card-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
    font-size: 0.75rem;
  }

  .card-type-line {
    color: var(--sl-color-gray-3);
    font-size: 0.625rem;
    text-transform: uppercase;
  }

  .stats-row {
    display: flex;
    gap: 0.75rem;
    font-family: var(--sl-font-mono);
    font-weight: 700;
  }

  .stat.atk { color: #ef4444; }
  .stat.def { color: #3b82f6; }

  .effect-preview {
    font-size: 0.625rem;
    color: var(--sl-color-gray-3);
    line-height: 1.3;
    margin-top: 0.25rem;
  }

  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    border-top: 1px solid var(--sl-color-gray-5);
    font-size: 0.625rem;
  }

  .card-number {
    font-family: var(--sl-font-mono);
    color: var(--sl-color-gray-3);
  }

  .card-rarity {
    font-weight: 700;
    color: var(--rarity-color);
  }
</style>
