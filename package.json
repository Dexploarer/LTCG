{
  "name": "ltcg-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n convex,web -c blue,magenta \"bun run dev:convex\" \"bun run dev:web\"",
    "dev:convex": "convex dev",
    "dev:web": "cd apps/web && bun run dev",
    "dev:admin": "cd apps/admin && bun run dev",
    "dev:wiki": "cd apps/wiki && bun run dev",
    "dev:all": "concurrently -n convex,web,admin,wiki -c blue,magenta,cyan,green \"bun run dev:convex\" \"bun run dev:web\" \"bun run dev:admin\" \"bun run dev:wiki\"",
    "build": "turbo run build",
    "build:web": "cd apps/web && bun run build",
    "build:admin": "cd apps/admin && bun run build",
    "build:wiki": "cd apps/wiki && bun run build",
    "start": "cd apps/web && bun run start",
    "start:admin": "cd apps/admin && bun run start",
    "lint": "turbo run lint",
    "convex": "convex",
    "clean": "rm -rf node_modules apps/*/node_modules apps/*/.next apps/*/dist"
  },
  "dependencies": {
    "@convex-dev/auth": "^0.0.90",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@solana/wallet-adapter-base": "^0.9.27",
    "@solana/wallet-adapter-react": "^0.15.39",
    "@solana/wallet-adapter-react-ui": "^0.9.39",
    "@solana/wallet-adapter-wallets": "^0.19.37",
    "@solana/web3.js": "^1.98.4",
    "@tailwindcss/postcss": "4",
    "@tanstack/react-query": "^5.90.19",
    "bs58": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.30.0",
    "convex-helpers": "^0.1.111",
    "framer-motion": "^12.29.0",
    "lucide-react": "^0.562.0",
    "next": "^15.1.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "1.4.0",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.57.0",
    "@types/bs58": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "postcss": "^8.4.0",
    "tailwindcss": "4",
    "turbo": "^2.7.5",
    "typescript": "^5.8.0"
  }
}
